@model sunstealer.mvc.Models.Generic

@{
    ViewData["Title"] = "Update View";
}

<h1>Update</h1>

<h4>GenericModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Integer" class="control-label"></label>
                <input asp-for="Integer" class="form-control" value="@Model.Integer" />
                <span asp-validation-for="Integer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="String" class="control-label"></label>
                <input asp-for="String" class="form-control" value="@Model.String" />
                <span asp-validation-for="String" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
